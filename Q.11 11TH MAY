// Global variable declaration
let age = 25;

// Function to display age
function displayAge() {
    console.log("Current age is:", age);
}

// Function to change age
function changeAge(newAge) {
    age = newAge;
    console.log("Age updated to:", age);
}

// Testing the execution context
console.log("Initial age:", age);
displayAge();
changeAge(30);
displayAge(); 
