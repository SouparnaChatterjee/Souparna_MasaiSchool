// Vehicle interface
interface Vehicle {
  start(): void;
}

// Bike class implementing Vehicle
class Bike implements Vehicle {
  start(): void {
    console.log("Bike is starting");
  }
}

// Car class implementing Vehicle
class Car implements Vehicle {
  start(): void {
    console.log("Car is starting");
  }
}

// Driver class using Vehicle Strategy
class Driver {
  private vehicle: Vehicle;

  constructor(vehicle: Vehicle) {
    this.vehicle = vehicle;
  }

  drive(): void {
    this.vehicle.start();
    console.log("Driving...");
  }

  setVehicle(vehicle: Vehicle): void {
    this.vehicle = vehicle;
  }
}

// --------- Demonstration ---------

const driver = new Driver(new Bike());
driver.drive(); // Bike is starting → Driving...

driver.setVehicle(new Car());
driver.drive(); // Car is starting → Driving...
