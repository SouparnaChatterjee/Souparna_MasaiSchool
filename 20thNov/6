// Observer interface
interface Observer {
  update(): void;
}

// Smartphone observer
class Smartphone implements Observer {
  update(): void {
    console.log("Smartphone received notification");
  }
}

// Tablet observer
class Tablet implements Observer {
  update(): void {
    console.log("Tablet received notification");
  }
}

// Subject (Notification Center)
class NotificationCenter {
  private observers: Observer[] = [];

  attach(observer: Observer): void {
    this.observers.push(observer);
    console.log(`Observer added: ${observer.constructor.name}`);
  }

  detach(observer: Observer): void {
    this.observers = this.observers.filter(o => o !== observer);
    console.log(`Observer removed: ${observer.constructor.name}`);
  }

  notify(): void {
    for (const observer of this.observers) {
      observer.update();
    }
  }
}

// ----------- Demonstration -----------

const center = new NotificationCenter();

const phone = new Smartphone();
const tablet = new Tablet();

center.attach(phone);   // Observer added: Smartphone
center.attach(tablet);  // Observer added: Tablet

center.notify();
// Smartphone received notification
// Tablet received notification
